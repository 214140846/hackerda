<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hackerda.platform.mapper.ext.WechatOpenIdExtMapper">

    <insert id="insertBatch" parameterType="java.util.List">
        insert  into wechat_openid
        (<include refid="com.hackerda.platform.mapper.WechatOpenidMapper.Base_Column_List"/>)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id,jdbcType=INTEGER},
            #{item.openid,jdbcType=VARCHAR},
            #{item.account,jdbcType=INTEGER},
            #{item.gmtCreate,jdbcType=TIMESTAMP},
            #{item.gmtModified,jdbcType=TIMESTAMP},
            #{item.isBind,jdbcType=BIT},
            #{item.appid,jdbcType=VARCHAR})
        </foreach>

    </insert>
    <insert id="saveOrUpdate" parameterType="com.hackerda.platform.pojo.WechatOpenid" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">

        <selectKey keyProperty="count" resultType="int" order="BEFORE">
            SELECT COUNT(*) count FROM wechat_openid where appid = #{appid} and openid = #{openid}
        </selectKey>

        <if test="count > 0">
            update wechat_openid
            <set >
                <if test="openid != null" >
                    openid = #{openid,jdbcType=VARCHAR},
                </if>
                <if test="account != null" >
                    account = #{account,jdbcType=INTEGER},
                </if>
                <if test="gmtCreate != null" >
                    gmt_create = #{gmtCreate,jdbcType=TIMESTAMP},
                </if>
                <if test="gmtModified != null" >
                    gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},
                </if>
                <if test="isBind != null" >
                    is_bind = #{isBind,jdbcType=BIT},
                </if>
                <if test="appid != null" >
                    appid = #{appid,jdbcType=VARCHAR},
                </if>
            </set>
            where appid = #{appid} and openid = #{openid}
        </if>
        <if test="count == 0">
            insert into wechat_openid
            <trim prefix="(" suffix=")" suffixOverrides="," >
                <if test="id != null" >
                    id,
                </if>
                <if test="openid != null" >
                    openid,
                </if>
                <if test="account != null" >
                    account,
                </if>
                <if test="gmtCreate != null" >
                    gmt_create,
                </if>
                <if test="gmtModified != null" >
                    gmt_modified,
                </if>
                <if test="isBind != null" >
                    is_bind,
                </if>
                <if test="appid != null" >
                    appid,
                </if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides="," >
                <if test="id != null" >
                    #{id,jdbcType=INTEGER},
                </if>
                <if test="openid != null" >
                    #{openid,jdbcType=VARCHAR},
                </if>
                <if test="account != null" >
                    #{account,jdbcType=INTEGER},
                </if>
                <if test="gmtCreate != null" >
                    #{gmtCreate,jdbcType=TIMESTAMP},
                </if>
                <if test="gmtModified != null" >
                    #{gmtModified,jdbcType=TIMESTAMP},
                </if>
                <if test="isBind != null" >
                    #{isBind,jdbcType=BIT},
                </if>
                <if test="appid != null" >
                    #{appid,jdbcType=VARCHAR},
                </if>
            </trim>
        </if>
    </insert>


    <select id="selectBySubscribe" parameterType="com.hackerda.platform.pojo.ScheduleTask" resultMap="com.hackerda.platform.mapper.WechatOpenidMapper.BaseResultMap">
        select
            wechat_openid.id, wechat_openid.openid, account,
            wechat_openid.gmt_create, gmt_modified, is_bind,
            wechat_openid.appid
        from schedule_task

        join wechat_openid on schedule_task.openid = wechat_openid.openid

        <where>
            <if test="appid != null">
                and schedule_task.appid = #{appid}
            </if>
            <if test="isSubscribe != null">
                and is_subscribe = #{isSubscribe}
            </if>
            <if test="scene != null">
                and scene = #{scene}
            </if>
        </where>

    </select>

</mapper>