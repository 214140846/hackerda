<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hackerda.platform.mapper.SubscribeGradeUpdateMapper">

    <select id="isOpenidSubscribed" parameterType="String" resultType="String">
      select openid from subscribe_grade_update where openid = #{value}
    </select>

    <insert id="insert" parameterType="com.hackerda.platform.pojo.wechat.SubscribeGradeUpdate">
        insert into subscribe_grade_update
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                id,
            </if>
            <if test="openid != null" >
                openid,
            </if>
            <if test="gmtCreate != null" >
                gmt_create,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=INTEGER},
            </if>
            <if test="openid != null" >
                #{openid,jdbcType=VARCHAR},
            </if>
            <if test="gmtCreate != null" >
                #{gmtCreate,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <select id="getSubscribedList"  resultType="com.hackerda.platform.pojo.wechat.SubscribeGradeUpdate">
      select * from subscribe_grade_update
    </select>

</mapper>